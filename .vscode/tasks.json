{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All",
            "type": "shell",
            "command": [
                "make",
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "Sign Binary",
            "type": "shell",
            "command": "codesign --force --sign - --entitlements ${workspaceFolder}/entitlements.plist ./build/benchmark/monolith-bench-search-name",
            "group": "build",
            "dependsOn": "Build All"
        }
    ]
}